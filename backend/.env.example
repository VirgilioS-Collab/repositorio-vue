# =======================================
# ARCHIVO DE EJEMPLO - NO USAR EN PRODUCCIÓN
# =======================================
# Copia este archivo como .env y rellena con tus credenciales reales
# El archivo .env NO debe subirse a GitHub

# =======================================
# CONFIGURACIÓN DE BASE DE DATOS
# =======================================
DB_USER=tu_usuario_de_bd
DB_PASSWORD=tu_contraseña_super_segura
DB_NAME=nombre_de_tu_base_de_datos
DB_HOST=localhost_o_tu_host
DB_PORT=5432

# =======================================
# CONFIGURACIÓN JWT
# =======================================
JWT_ISSUER=auth.tu-dominio.com
JWT_SECRET_KEY=genera_una_clave_secreta_muy_larga_y_segura_aqui

# =======================================
# CONFIGURACIÓN DEL FRONTEND
# =======================================
FRONTEND_ORIGIN=http://localhost:5173

# =======================================
# CONFIGURACIÓN DE COOKIES
# =======================================
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Strict

# =======================================
# CONFIGURACIÓN SMTP PARA EMAILS
# =======================================
MAIL_SERVER=smtp.tu-proveedor.com
MAIL_PORT=587
MAIL_USERNAME=tu_usuario_smtp
MAIL_PASSWORD=tu_contraseña_smtp
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_DEFAULT_SENDER=Tu App <noreply@tu-dominio.com>

# =======================================
# CONFIGURACIÓN DE IMGUR
# =======================================
IMGUR_CLIENT_ID=tu_client_id_de_imgur
IMGUR_IMAGE_SQUARE_SIZE=1024
IMGUR_ENDPOINT=https://api.imgur.com/3/image
IMGUR_CLIENT_SECRET=tu_client_secret_de_imgur
